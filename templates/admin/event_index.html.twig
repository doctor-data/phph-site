{% extends 'admin/base.html.twig' %}
{% block title %}Organisers admin{% endblock %}
{% block main %}
    <h1>{{ title | default('Dashboard') }}</h1>
    <table>
        <thead>
        <tr>
            <th>Date</th>
        </tr>
        </thead>
        <tbody>
        {% for event in events|default %}
            <tr>
                <td><a href="{{ url('event_member_management', {'id':event.id}) }}">{{ event.date|date('M Y') }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <nav>
        <a class="button small" href="{{ url('event_add') }}">Add event</a>
    </nav>
{% endblock %}